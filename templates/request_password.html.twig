{% extends 'base.html.twig' %}

{% block title %}{{ 'title.resetPassword.title'|trans }}{% endblock %}

{% block body %}
    <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center min-vh-100">
            <div class="col-12 col-md-8 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {% if has_changed %}
                            <div class="valid-icon h-100 text-success text-center py-5">
                                <i class="bi bi-check-circle"></i>
                                <p class="fs-1">{{ 'validMessage.resetPassword.ok'|trans }}</p>
                            </div>
                        {% else %}
                            <div class="mb-4">
                                <h5>{{ 'title.resetPassword.h3'|trans }}</h5>
                                <p class="mb-2">
                                    {{ 'text.resetPassword.complexity'|trans }}
                                </p>
                            </div>
                            {{ form_start(form) }}
                                {{ form_row(form.password.first) }}
                                {{ form_row(form.password.second) }}
                                <div class="mb-3 d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        {{ 'cta.resetPassword.submit'|trans }}
                                    </button>
                                </div>
                            {{ form_end(form) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
